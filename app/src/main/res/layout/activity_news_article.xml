<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.NewsArticle">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_category"
            android:layout_width="180dp"
            android:layout_gravity="left"
            android:layout_height="match_parent"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginTop="6dp" />
            <TextView
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:text="See location:"
                android:gravity="right"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/articleLocation"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="@drawable/location" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="396dp"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_below="@id/text_category"
            android:fontFamily="@font/advent_pro_bold"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_below="@id/text_title"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imageView"
            android:fontFamily="@font/advent_pro_bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:textSize="29sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_abstract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_subtitle"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_below="@id/text_abstract"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>